<div class="row">
  <div class="col-md-2">
    <%= render partial: "layouts/user_menu" %>
  </div>
  <div class="col-md-8">

    <div class="row">
      <div class="col-md-2">
      </div>
      <div class="col-md-8">
        <h4>Slots Distribution for <%= @slot_presenter.name %></h4>
      </div>
      <div class="col-md-2">
      </div>
    </div>
    <div class="row">
      <% idx = 1 %>
      <% @slot_presenter.slots_distribution.each do |row| %>
        <div class="row">
          <% row.each do |slot| %>
            <% if slot.is_occupied %>
              <div class="col-md-3 slot-occupied">
                <p>
                  <%= idx %>
                </p>
                <p>
                  Occupied
                </p>
              </div>
            <% else %>
              <div class="col-md-3 slot-free">
                <p>
                  <%= idx %>
                </p>
                <p>
                  Empty
                </p>
              </div>
            <% end %>
            <% idx += 1 %>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="row">
      <div class="col-md-2 button-opt">
        <%= link_to "Add Slots",
            new_location_slot_path(@slot_presenter.location),
            class: 'btn btn-success'%>
      </div>
      <div class="col-md-2 button-opt">
        <%= link_to "Simulate Parking",
            location_simulate_parking_path(@slot_presenter.location),
            class: 'btn btn-success'%>
      </div>
      <div class="col-md-8">
      </div>
    </div>
  </div>
  <div class="col-md-2">
  </div>
</div>