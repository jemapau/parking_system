<div class="row" >
  <div class="col-md-3">
  </div>
  <div class="col-md-6">
    <h3 class="text-center"> New Slots for <%= @location.name %> </h3>
  </div>
  <div class="col-md-3">
  </div>
</div>
<div class="row">
  <div class="col-md-3">
  </div>
  <div class="col-md-6">
    <%= form_tag location_slots_path(@location), method: 'post' do %>
      <div class="row">
        <div class="col-md-6">
          <%= label_tag :slots_to_create %>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= select_tag :slots, options_for_select((1..@location.max_slots).step(1)), class:'form-control', required: true%>
          </div>
        </div>
      </div>
      <div class="form-group">
        <%= submit_tag "Create Slots", class: 'btn btn-success'%>
        <%= link_to "Cancel", location_slots_path(@location), class: 'btn btn-default'%>
      </div>
    <% end %>
  </div>
  <div class="col-md-3">
  </div>
</div>